<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
    {{> trainerLayout}}

    <main class="content-detail" id="">
        <h3 class="fs-4 mt-5">Courses (~ 20 records)</h3>
        <div class="content-detail-header mt-4">
        <button type="button" class="btn btn-primary fs-5 js-add-info" style="font-weight: 500;">New Course</button>
           <form action="" class="content-detail-header-search">
                <input type="search" class="form-control" placeholder="Search by name..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                <button style="width: 90px;" class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
            </form>
        </div>
    
        <table class="table table-hover table-bordered caption-top mt-5">
            <thead class="table-light">
                <tr style="font-size: 18px; text-align: center;">
                    <th scope="col">#</th>
                    {{!-- <th scope="col">Code</th> --}}
                    <th scope="col">Course Category</th>
                    <th scope="col">Name</th>
                    <th scope="col">Trainer</th>
                    <th scope="col">Total</th>
                    <th scope="col"><i class="bi bi-tools fs-5"></i><span style="margin-left: 12px;">Action</span></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr style="font-size: 18px; text-align: center;">
                    <th scope="row">{{@index}}</th>
                    {{!-- <td>{{this.code}}</td> --}}
                    <td>{{this.coursecategory}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.trainer}}</td>
                    <td>{{this.total}}</td>
                    <td>
                        <div class="btn-group" style="z-index: 0;" role="group" aria-label="Basic mixed styles example">
                            <a href="/coursetrainer/edit?id={{this._id}}" class="btn btn-success js-edit-info" style="border-bottom-right-radius: unset; border-top-right-radius: unset;">
                                <i class="bi bi-pencil-square"></i><span class=" fs-6" style="margin-left: 5px;">Edit</span>
                            </a>
                            <a href="/coursetrainer/delete?id={{this._id}}" class="btn btn-danger" style="border-radius: unset;">
                                <i class="bi bi-x-lg"></i><span class=" fs-6" style="margin-left: 5px;">Delete</span>
                            </a>

                        </div>    
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </main>

    <div class="modal-action_form js-modal-adding_form">
        <div class="modal-action_form-container js-modal-action_form-container">
            <div class="modal-action_form-close js-modal-action_form-close"><i class="bi bi-x-lg"></i></div>
            <header class="modal-action_form-header">
                <i style="margin-right: 20px;" class="bi bi-person-plus"></i>
                New Course
            </header>

            {{!-- block of code for add new course --}}
            <form class="modal-action_form-body" method="POST" action="/coursetrainer/store">
                {{!-- <div class="form-group">
                    <label for="courseCode">Code</label>
                    <input type="text" class="form-control" id="courseCode" name="coursecode" placeholder="Course Code..." required>
                </div> --}}
                <div class="form-group">
                    <label for="courseCategory">Course Category</label>
                    <input type="text" class="form-control" id="courseCategory" name="coursecategory" placeholder="Course Category..." required>
                </div>
                <div class="form-group">
                    <label for="categoryName">Name</label>
                    <input type="text" class="form-control" id="categoryName" name="name" placeholder="Course Name..." required>
                </div>
                <div class="form-group">
                    <label for="courseTrainer">Trainer</label>
                    <input class="form-control" id="courseTrainer" name="trainer" placeholder="Course Trainer..." required>
                </div>
                <div class="form-group">
                    <label for="courseTrainer">Total</label>
                    <input type ="number" class="form-control" id="courseTotal" name="total" placeholder="Course Total..." required>
                </div>
                <button type="submit" class="btn-action">Add<i style="margin-left: 5px;" class="bi bi-check2"></i></button>
            </form>
            <footer class="modal-action_form-footer">
                <p style="margin-bottom: 6px;">Need <a href="#">help?</a></p>
            </footer>
        </div>
    </div>

{{> bottom}}
</body>
</html>