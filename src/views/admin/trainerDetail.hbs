<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
    {{> adminLayout}}
    <main class="content-detail" id="common_content-area">
        <a href="/admin/trainer-accounts" class="btn btn-link fs-5 mt-4">
            <i class="bi bi-arrow-return-left" style="margin-right: 5px;"></i>Back
        </a>
        <h2 class="text-center mt-4 text-primary">Trainer Account Detail</h2>
        <table class="table table-bordered caption-top mt-4" style="width: 100%;">
            <thead class="">
                <tr style="font-size: 18px; text-align: center;">
                    <th scope="col">Full Name</th>
                    <th scope="col">Specialty</th>
                    <th scope="col">Age</th>
                    <th scope="col">Birthday</th>
                    <th scope="col">Address</th>
                    <th scope="col">
                        <i class="bi bi-tools fs-5"></i><span style="margin-left: 12px;">Actions</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="col" style="text-align: center;">{{trainer.name}}</td>
                    <td scope="col" style="text-align: center;">{{trainer.specialty}}</td>
                    <td scope="col" style="text-align: center;">{{calculateAge trainer.dob}}</td>
                    <td scope="col" style="text-align: center;">{{trainer.dob}}</td>       
                    <td scope="col">{{trainer.address}}</td>
                    <td scope="col" style="text-align: center; max-width: 220px;">
                        <a href="/admin/trainer-accounts/edit?id={{trainer._id}}" class="btn btn-primary js-edit-info">
                            <i class="bi bi-pencil-square"></i>
                            <span class=" fs-6" style="margin-left: 5px;">Edit</span>
                        </a>
                        <a href="" class="btn btn-danger" data-bs-toggle="modal" data-id="{{trainer._id}}" data-bs-target="#delete-item-modal">
                            <i class="bi bi-x-lg"></i>
                            <span class=" fs-6" style="margin-left: 5px;">Delete</span>
                        </a>
                        <a href="/admin/trainer-accounts/passwords/set_default?id={{trainer._id}}" class="btn btn-warning">
                            <i class="bi bi-gear"></i>
                            <span class=" fs-6" style="margin-left: 5px;">Set default password</span>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </main>

    <div class="modal fade" id="delete-item-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                    <i class="bi bi-exclamation-triangle fs-3" style="color: red; margin-left: 10px;"></i>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this account?
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-delete-item" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <form name="delete-item-form" action="/admin/trainer-accounts/delete">
        <input type="hidden" name="id" value="">
    </form>

    <script>
        confirmItemDeletion();
    </script>

{{> frameworkCDN}}
</body>
</html>