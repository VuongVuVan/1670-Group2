<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
    {{> adminLayout}}

    <main class="content-detail" id="common_content-area">
        <a href="/admin/admin-accounts" class="btn btn-link fs-5">
            <i class="bi bi-arrow-return-left" style="margin-right: 5px;"></i>Back
        </a>
        <form class="row g-3 mt-4" method="POST" action="/admin/admin-accounts/update?id={{admin._id}}" enctype="multipart/form-data">
            <div class="text-left">
                <img style="width: 170px; height: 170px; margin-right: 20px;" src="data:image/{{admin.image.contentType}};base64,{{convertImage admin.image.data}}" alt="" class="img-thumbnail">
                <div class="chosen_image-container">
                    <img style="width: 170px; height: 170px;" src="" class="img-thumbnail" id="chosenImage" alt="">
                    <i id="cancel-btn" class="bi bi-x-lg"></i>
                </div>
            </div>
            <div class="col-12 mt-4 mb-3">
                <label class="input-group-text" style="cursor: pointer;" for="btn-upload-img">Upload</label>
            </div>

            <div class="col-12">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="{{admin.email}}" required>
            </div>
            <div class="col-12">
                <label for="fullName" class="form-label">Full name</label>
                <input type="text" class="form-control" id="fullName" name="name" value="{{admin.name}}" required>
            </div>
            <div class="col-12">
                <label for="dob" class="form-label">Date of birth</label>
                <input type="date" class="form-control" id="dob" name="dob" value="{{convertDate admin.dob}}" required>
            </div>
            {{!-- <div class="col-12">
                <label for="inputAddress2" class="form-label">Address 2</label>
                <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
            </div>
            <div class="col-md-6">
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="col-md-4">
                <label for="inputState" class="form-label">State</label>
                <select name="" id="inputState" class="form-select">
                    <option value="{{id}}">IT</option>
                    <option value="{{id}}">Business</option>
                    <option value="{{id}}">ABC</option>
                </select>
            </div> --}}
            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <textarea class="form-control" id="address" rows="3" name="address" required>{{admin.address}}</textarea>
            </div>
            {{!-- <div class="input-group mt-4 mb-3"> --}}
                <input type="file" class="form-control" id="btn-upload-img" name="image" accept="image/*" hidden>
            {{!-- </div> --}}
            <div class="col-12 mt-5">
                <button type="submit" class="btn btn-primary fs-5" style="font-weight: 500;">Update
                    <i class="bi bi-check2 fs-5"></i>
                </button>
            </div>
        </form>
    </main>

{{> bottom}}
</body>
</html>