<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
    {{> adminLayout}}

    <main class="content-detail" id="common_content-area">
        <a href="/admin/admin-accounts" class="btn btn-link fs-5">
            <i class="bi bi-arrow-return-left" style="margin-right: 5px;"></i>Back
        </a>
        <form class="row g-3 mt-4" method="POST" action="/admin/admin-accounts/update?id={{admin._id}}" enctype="multipart/form-data" onsubmit="return validateAdminAcc();">
            <div class="text-left">
                <img style="width: 170px; height: 170px; margin-right: 20px;" src="data:image/{{admin.image.contentType}};base64,{{convertImage admin.image.data}}" alt="" class="img-thumbnail">
                <div class="chosen_image-container">
                    <img style="width: 170px; height: 170px;" src="" class="img-thumbnail" id="chosenImage" alt="">
                    <i id="cancel-btn" class="bi bi-x-lg"></i>
                </div>
            </div>
            <div class="col-12 mt-4 mb-3">
                <label class="input-group-text" style="cursor: pointer;" for="btn-upload-img">Upload</label>
            </div>
            <div class="col-12">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" value="{{admin.email}}" minlength="12" maxlength="40" required placeholder="Your email address...">
                <span class="msg" id="email-msg"></span>
            </div>
            <div class="col-12">
                <label for="fullName" class="form-label">Full name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{admin.name}}" required placeholder="Your full name..." minlength="5" maxlength="30">
                <span class="msg" id="name-msg"></span>
            </div>
            <div class="col-12">
                <label for="dob" class="form-label">Date of birth</label>
                <input type="date" class="form-control" id="dob" name="dob" value="{{convertDate admin.dob}}" required>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <textarea class="form-control" id="address" rows="3" name="address" required placeholder="Your address..." minlength="6" maxlength="100">{{admin.address}}</textarea>
                <span class="msg" id="address-msg"></span>
            </div>
            {{!-- <div class="input-group mt-4 mb-3"> --}}
                <input type="file" class="form-control" id="btn-upload-img" name="image" accept="image/*" hidden>
            {{!-- </div> --}}
            <div class="col-12 mt-5">
                <button type="submit" class="btn btn-outline-primary fs-5" style="font-weight: 500;">Update
                    <i class="bi bi-check2 fs-5"></i>
                </button>
            </div>
        </form>
    </main>

    <script>
        previewImageAndClose();
    </script>

{{> frameworkCDN}}
</body>
</html>