<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
    {{> trainerLayout}}
    <main class="content-detail" id="">
        <h3 class="fs-4 mt-5">Courses (~ 20 records)</h3>
        <div class="content-detail-header mt-4">
            <button type="button" class="btn btn-primary fs-5 js-add-info" style="font-weight: 500;">New Course</button>
            <form action="/courses/search" class="content-detail-header-search" method="GET">
                <input type="search" name="qq" class="form-control" placeholder="Search by name..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                <button style="width: 90px;" class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
            </form>
        </div>
    
        <table class="table table-hover table-bordered caption-top mt-5">
            <thead class="table-light">
                <tr style="font-size: 18px; text-align: center;">
                    <th scope="col">#</th>
                    <th scope="col">Course Category</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Description</th>
                    <th scope="col"><i class="bi bi-tools fs-5"></i><span style="margin-left: 12px;">Action</span></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr style="font-size: 18px; text-align: center;">
                    <th scope="row">{{@index}}</th>
                    <td>{{this.coursecategory}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>
                        <div class="btn-group" style="z-index: 0;" role="group" aria-label="Basic mixed styles example">
                            <button type="button" class="btn btn-success js-edit-info">
                                <i class="bi bi-pencil-square"></i>
                                <a class ="underline-white" href="/courses/update/?id={{data._id}}">
                                    <span class=" fs-6" style="margin-left: 18px;">Edit</span>
                                </a>
                            </button>
                            <button type="button" class="btn btn-danger">
                                <i class="bi bi-x-lg"></i>
                                <a class ="underline-white" href="/courses/delete/?id={{this._id}}">
                                    <span class=" fs-6" style="margin-left: auto;">Delete</span>
                                </a>
                            </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </main>

    <div class="modal-action_form js-modal-adding_form">
        <div class="modal-action_form-container js-modal-action_form-container">
            <div class="modal-action_form-close js-modal-action_form-close"><i class="bi bi-x-lg"></i></div>
            <header class="modal-action_form-header">
                <i style="margin-right: 20px;" class="bi bi-person-plus"></i>
                New Course
            </header>

            {{!-- block of code for add new course --}}
            <form class="modal-action_form-body" method="POST" action="/courses/store">
                <div class="form-group">
                    <label for="courseCategory">Course Category</label>
                    <input type="text" class="form-control" id="courseCategory" name="coursecategory" placeholder="Course Category..." required>
                </div>
                <div class="form-group">
                    <label for="categoryName">Course Name</label>
                    <input type="text" class="form-control" id="categoryName" name="name" placeholder="Course Name..." required>
                </div>
                <div class="form-group">
                    <label for="courseDescription">Course Description</label>
                    <textarea class="form-control" id="courseDescription" name="description" placeholder="Course Description..." required></textarea>
                </div>
                <button type="submit" class="btn-action">Add<i style="margin-left: 5px;" class="bi bi-check2"></i></button>
            </form>
            <footer class="modal-action_form-footer">
                <p style="margin-bottom: 6px;">Need <a href="#">help?</a></p>
            </footer>
        </div>
    </div>

    {{!-- block of code for editing --}}
        <div class="modal-action_form js-modal-editing_form">
        <div class="modal-action_form-container js-modal-action_form-container">
            <div class="modal-action_form-close js-modal-action_form-close"><i class="bi bi-x-lg"></i></div>
            <header class="modal-action_form-header">
                <i style="margin-right: 20px;" class="bi bi-person"></i>
                Edit Course
            </header>

        <form class="modal-action_form-body">
                <div class="form-group"> 
                    <label for="coursecategory">Course Category</label>
                    <input type="text" class="form-control" value="{{data.coursecategory}}" id="coursecategory" name="coursecategory" placeholder="Course Category..." required>
                </div>
                <div class="form-group">
                    <label for="name">Course Name</label>
                    <input type="text" class="form-control" value="{{data.name}}" id="name" name="name" placeholder="Course Name..." required>    
                </div>
                <div class="form-group">
                    <label for="description">Course Description</label>
                    <textarea class="form-control" id="description" name="description" placeholder="Course Description...." required>{{data.description}}</textarea>
                </div>
                <button type="submit" class="btn-action">Update<i style="margin-left: 5px;" class="bi bi-check2"></i></button>
            </form class="form-group">
            <footer class="modal-action_form-footer">
                <p style="margin-bottom: 6px;">Need <a href="#">help?</a></p>
            </footer>
        </div>
    </div>
{{> bottom}}
</body>
</html>