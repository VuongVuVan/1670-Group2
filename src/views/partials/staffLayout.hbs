<header class="common_interface-header" id="common_interface-header">
    <div class="common_interface-header-l_area">
        <a href="/staff"><img class="" src="/images/header/logo.png" alt=""></a>
        <span style="font-size: 35px; cursor: pointer;" onclick="toggle()">&#9776;</span>
    </div>
    <div class="common_interface_header_r-area">
        <div class="header_r-area-info">
        {{!-- <img src="/images/avatar/avastaff.png" alt=""> --}}
        <img src="data:image/{{user.image.contentType}};base64,{{convertImage user.image.data}}" alt="">
            <label for="info-checkbox">{{user.name}}
                <span class="fas fa-caret-down"></span>
            </label>
            <input type="checkbox" name="" id="info-checkbox">
            <ul>
                <li><a href="/{{removeSpace user.name}}">Your profile</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </div>
</header>

