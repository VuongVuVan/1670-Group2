<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
    {{> staffLayout}}
    
    <main class="content-detail" id="">
        <h3 class="fs-4 mt-5">Test Account (~ 20 records)</h3>
        <div class="content-detail-header mt-4">
            <button type="button" class="btn btn-primary fs-5 js-add-info" style="font-weight: 500;">New Account</button>
        </div>

        <table class="table table-hover table-bordered caption-top mt-5">
            <thead class="table-light">
                <tr style="font-size: 18px; text-align: center;">
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Email</th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Address</th>
                    <th scope="col"><i class="bi bi-tools fs-5"></i><span style="margin-left: 12px;">Action</span></th>
                </tr>
            </thead>
            <tbody>
                {{#each staffs}}
                <tr style="font-size: 18px; text-align: center;">
                    <th scope="row">{{@index}}</th>
                    <th scope="col">
                        <img src="{{this.image}}" alt="">
                    </th>
                    {{!-- <td>
                        <img style="width: 200px; height: 200px;" src="data:image/{{this.image.contentType}};base64,{{convertImage this.image.data}}" alt="">
                    </td> --}}
                    <td>{{this.email}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.age}}</td>
                    <td>{{this.dob}}</td>
                    <td>{{this.address}}</td>
                    <td>
                        <div class="btn-group" style="z-index: 0;" role="group" aria-label="Basic mixed styles example">
                            <button type="button" class="btn btn-success js-edit-info">
                                <i class="bi bi-pencil-square"></i>
                                <a class ="underline-white" href="/staff/edit">
                                    <span class=" fs-6" style="margin-left: 18px;">Edit</span>
                                </a>
                            </button>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </main>

    {{!-- Test Add --}}
    <div class="modal-action_form js-modal-adding_form">
        <div class="modal-action_form-container js-modal-action_form-container">
            <div class="modal-action_form-close js-modal-action_form-close"><i class="bi bi-x-lg"></i></div>
            <header class="modal-action_form-header">
                <i style="margin-right: 20px;" class="bi bi-stack"></i>
                New Account
            </header>

            {{!-- block of code for add account --}}
            <form class="modal-action_form-body" method="POST" action="/staff/store" enctype="multipart/form-data">
                <div>
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="" name="email"  placeholder="Email of Staff.." required>
                </div>
                <div>
                    <label for="namestaff">Name</label>
                    <input type="text" class="form-control" id="" name="name"  placeholder="Name of Staff..." required>
                </div>
                <div>
                    <label for="age">Age</label>
                    <input type="number" class="form-control" id="" name="age"  placeholder="Age..." required>
                </div>
                <div>
                    <label for="dob">DOB</label>
                    <input type="date" class="form-control" id="" name="dob"  placeholder="DOB..." required>
                </div>
                <div>
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="" name="address"  placeholder="Address..." required>
                </div>
                <div>   
                    <label for="avatar" class="">Avatar</label>
                    <input type="file" name="image" id="avatar" accept="image/*">
                </div>
                <button type="submit" class="btn-action">Add<i style="margin-left: 5px;" class="bi bi-check2"></i></button>
            </form>
            <footer class="modal-action_form-footer">
                <p style="margin-bottom: 6px;">Need <a href="#">help?</a></p>
            </footer>
        </div>
    </div>
{{> bottom}}
</body>
</html>